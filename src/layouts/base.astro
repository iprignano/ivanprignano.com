---
import '../styles/global.css';
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Geist+Mono:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle || 'ivan prignano'}</title>
  </head>
  <body>
    <div class="blotches">
      <img src="/mesh.jpg" alt="" />
      <img src="/mesh1.jpg" alt="" />
      <img src="/mesh2.jpg" alt="" />
    </div>
    <div class="content">
      <h1 class="monospace"><a href="/">ivan prignano</a></h1>
      <slot />
    </div>
    <footer>
      code on <a
        href="https://codeberg.org/iprignano/ivanprignano.com"
        target="_blank"
        rel="noreferrer noopener"
      >
        codeberg
      </a>
      â€“ mesh gradients by{' '}
      <a href="https://www.ls.graphics" target="_blank" rel="noreferrer noopener">ls.graphics</a>
    </footer>
  </body>
</html>
<style>
  .blotches img {
    position: absolute;
    border-radius: 50%;
    object-fit: fill;
    z-index: -1;
    animation: blotching 120s infinite alternate;
  }

  @keyframes blotching {
    0% {
      transform: rotate(0) scale(1);
    }
    100% {
      transform: rotate(360deg) scale(1.2);
    }
  }

  .blotches img:nth-child(1) {
    top: 690px;
    left: -20px;
    width: 350px;
    height: 350px;
  }

  .blotches img:nth-child(2) {
    top: 250px;
    left: 550px;
    width: 450px;
    height: 450px;
    animation-duration: 240s;
  }

  .blotches img:nth-child(3) {
    top: -130px;
    left: 250px;
    width: 220px;
    height: 220px;
  }

  h1 {
    margin: 0 0 40px;
    font-size: 20px;
    transition: color 100ms ease-in-out;
  }

  h1 a {
    display: inline-block;
    text-decoration: none;
    color: rgba(0, 0, 0, 0.9);
  }

  h1 a:hover {
    color: #7b7b7b;
  }

  .content {
    padding: 30px;
  }

  footer {
    font-size: 14px;
    padding: 30px;
    color: rgba(0, 0, 0, 0.3);
    margin-top: auto;
  }

  footer a {
    color: rgba(0, 0, 0, 0.4);
  }

  footer a:hover {
    text-decoration: none;
  }

  @media screen and (min-width: 600px) {
    .content,
    footer {
      padding: 50px;
    }
  }
</style>
